{
    "manifest_version": 3,
    "name": "Website Screenshot Capture",
    "version": "1.0",
    "description": "Captures full-height screenshots of websites",
    "permissions": [
      "activeTab",
      "downloads"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_title": "Capture Screenshot"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["html2canvas.min.js", "content.js"]
      }
    ]
  }